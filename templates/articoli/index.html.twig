{% extends 'base.html.twig' %}

{% block title %}Euromag - Articoli{% endblock %}

{% block head_css %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/articoli') }}
{% endblock %}

{% block body %}

    <form class="form-inline mb-2">
        <input class="form-control col-8 col-md-4" id="formInputCerca" type="search" name="search" autocomplete="off"
               placeholder="codice..." aria-label="Cerca">
        <button class="btn btn-primary ml-2" type="submit">Trova</button>
    </form>

    <div class="d-flex flex-wrap">
        {% for articolo in articoli %}
            <div class="card mr-2 mb-2">
                <div class="card-body bg-dark">
                    <h5 class="card-title">{{ articolo.codice }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ articolo.descrizione }}</h6>
                    <a href="{{ path('ubicazioni_index', {search: articolo.codice}) }}" class="card-link"><i class="fas fa-search"></i></a>
                    <a href="{{ path('articoli_update', {id: articolo.id}) }}" class="card-link"><i class="fas fa-edit"></i></a>
                    {#<a href="{{ path('articoli_update', {id: articolo.id}) }}"><i class="fa fa-edit"></i> Modifica</a>#}
                </div>
            </div>
        {% else %}
            <h3>Nessun articolo trovato.</h3>
        {% endfor %}
    </div>

    {% if articoli.haveToPaginate %}
        <div class="navigation text-center">
            {{ pagerfanta(articoli, 'twitter_bootstrap4_translated', {routeName: 'articoli_index_paginated', routeParams: app.request.query.all}) }}
        </div>
    {% endif %}

{% endblock %}
